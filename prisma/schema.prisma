generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// User & Authentication
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String?
  image         String?
  role          String    @default("USER")
  favoriteTeam  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  brackets           Bracket[]
  payments           Payment[]
  poolMemberships    PoolMember[]
  accounts           Account[]
  sessions           Session[]
  familyMembers      FamilyMember[]
  linkedAsFamilyMember FamilyMember? @relation("LinkedFamilyMember")
}

// Family Members - can have their own brackets, optionally get their own login later
model FamilyMember {
  id        String    @id @default(cuid())
  name      String
  email     String?   // Optional - for future login capability
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Managed by this user
  managedBy   User   @relation(fields: [managedById], references: [id], onDelete: Cascade)
  managedById String

  // If they create their own account later, link it here
  linkedUser   User?   @relation("LinkedFamilyMember", fields: [linkedUserId], references: [id])
  linkedUserId String? @unique

  brackets Bracket[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Pool Management
model Pool {
  id          String   @id @default(cuid())
  name        String
  description String?
  entryFee    Decimal  @default(5.00)
  inviteCode  String   @unique
  deadline    DateTime
  status      String   @default("OPEN")
  paypalLink  String?
  venmoHandle String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members      PoolMember[]
  brackets     Bracket[]
  tournament   Tournament   @relation(fields: [tournamentId], references: [id])
  tournamentId String
}

model PoolMember {
  id       String   @id @default(cuid())
  role     String   @default("MEMBER")
  paid     Boolean  @default(false)
  joinedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
  pool   Pool   @relation(fields: [poolId], references: [id])
  poolId String

  @@unique([userId, poolId])
}

// Tournament Data
model Tournament {
  id        String   @id @default(cuid())
  name      String
  year      Int
  startDate DateTime
  endDate   DateTime

  pools Pool[]
  games Game[]
  teams TournamentTeam[]
}

model Team {
  id        String  @id @default(cuid())
  name      String
  shortName String
  espnId    String? @unique
  logo      String?

  tournamentEntries TournamentTeam[]
}

model TournamentTeam {
  id     String @id @default(cuid())
  seed   Int
  region String

  team         Team       @relation(fields: [teamId], references: [id])
  teamId       String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId String

  picks         Pick[]
  homeGames     Game[]     @relation("HomeTeam")
  awayGames     Game[]     @relation("AwayTeam")
  wonGames      Game[]     @relation("WinningTeam")

  @@unique([teamId, tournamentId])
}

model Game {
  id         String  @id @default(cuid())
  round      Int
  gameNumber Int
  region     String?
  status     String  @default("SCHEDULED")

  team1       TournamentTeam? @relation("HomeTeam", fields: [team1Id], references: [id])
  team1Id     String?
  team2       TournamentTeam? @relation("AwayTeam", fields: [team2Id], references: [id])
  team2Id     String?
  winner      TournamentTeam? @relation("WinningTeam", fields: [winnerId], references: [id])
  winnerId    String?

  team1Score Int?
  team2Score Int?
  startTime  DateTime?
  espnGameId String?    @unique

  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId String

  picks Pick[]

  @@unique([tournamentId, round, gameNumber])
}

// Brackets & Picks
model Bracket {
  id          String    @id @default(cuid())
  name        String
  entryName   String    // Name shown on leaderboard (user's name or family member's name)
  status      String    @default("DRAFT")
  totalScore  Int       @default(0)
  bonusScore  Int       @default(0)  // Bonus points (e.g., Final Four perfect = 10 pts)
  tiebreaker  Int?      // Predicted total combined score of championship game
  paid        Boolean   @default(false)  // Track payment per bracket
  picksData   String?   // JSON string of picks data (temporary until full game setup)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  submittedAt DateTime?

  user   User   @relation(fields: [userId], references: [id])
  userId String
  pool   Pool?  @relation(fields: [poolId], references: [id])
  poolId String?
  
  // Optional - if this bracket is for a family member
  familyMember   FamilyMember? @relation(fields: [familyMemberId], references: [id])
  familyMemberId String?

  picks Pick[]
}

model Pick {
  id           String   @id @default(cuid())
  choiceRank   Int      @default(1)
  pointsEarned Int      @default(0)
  correct      Boolean?

  bracket   Bracket        @relation(fields: [bracketId], references: [id], onDelete: Cascade)
  bracketId String
  game      Game           @relation(fields: [gameId], references: [id])
  gameId    String
  team      TournamentTeam @relation(fields: [teamId], references: [id])
  teamId    String

  @@unique([bracketId, gameId, choiceRank])
}

// Payments
model Payment {
  id            String   @id @default(cuid())
  amount        Decimal
  method        String
  status        String   @default("PENDING")
  transactionId String?
  createdAt     DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
  poolId String
}
